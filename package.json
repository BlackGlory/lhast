    "husky": "4",
    "npm-run-all": "^4.1.5",
    "rimraf": "^6.0.1",
    "standard-version": "^9.5.0",
    "ts-patch": "^3.3.0",
    "tslib": "^2.8.1",
    "typescript": "5.9.2",
    "typescript-eslint": "^8.42.0",
    "typescript-transform-paths": "^3.5.5",
    "vite-tsconfig-paths": "^5.1.4",
    "vitest": "^3.2.4"
  },
  "dependencies": {
    "@blackglory/prelude": "^0.4.0",
